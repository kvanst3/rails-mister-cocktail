 <div class="nav">
    <div id="icon"><%= cl_image_tag("icon_mamfrc", :height => 80) %></div>
    <div id="title">Cocktailmania</div>
    <div><%= link_to "Back", cocktail_path(@cocktail), id: 'new_cocktail'  %></div>
 </div>

<div class="container">
  <h1>Edit <%= @cocktail.name %></h1>
  <%= simple_form_for(@cocktail) do |f| %>
      <%= f.input :name %>
      <%= f.input :detail %>
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
      <%= f.submit "Add a cocktail", class: "btn btn-light" %>
  <% end %>
</div>
